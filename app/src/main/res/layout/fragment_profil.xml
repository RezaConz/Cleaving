<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilFragment"
    android:layout_marginBottom="-270dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/background"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-360dp"
            android:paddingStart="30dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:layout_marginLeft="130dp"
                android:text="Profile"
                android:textSize="18dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/UsernameProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="16dp"
            android:fontFamily="@font/mulish_bold"
            android:textColor="@color/cleaving_primary"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/EmailProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jennywilson@gmail.com"
            android:textSize="12dp"
            android:fontFamily="@font/mulish_bold"
            android:textColor="@color/grey_secondary"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textAlignment="center"/>

        <androidx.cardview.widget.CardView
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/address_profile"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="25dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:fontFamily="@font/mulish_bold"
                        android:textColor="@color/cleaving_primary"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/AddressProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="1901 Thornridge Cir. Shiloh, Hawaii 81063"
                        android:fontFamily="@font/mulish_bold"
                        android:textColor="@color/grey_secondary"
                        android:textSize="12dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:src="@drawable/phone_profile"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:layout_marginTop="70dp"
                        android:fontFamily="@font/mulish_bold"
                        android:textColor="@color/cleaving_primary"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/PhoneNumberProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="(205) 555-0100"
                        android:fontFamily="@font/mulish_bold"
                        android:textColor="@color/grey_secondary"
                        android:textSize="12dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="170dp"
                    android:src="@drawable/gender_profile"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:layout_marginTop="140dp"
                        android:fontFamily="@font/mulish_bold"
                        android:textColor="@color/cleaving_primary"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/GenderProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Choose your gender"
                        android:fontFamily="@font/mulish_bold"
                        android:textColor="@color/grey_secondary"
                        android:textSize="12dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="240dp"
                    android:src="@drawable/calendar_profile"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth"
                        android:layout_marginTop="210dp"
                        android:fontFamily="@font/mulish_bold"
                        android:textColor="@color/cleaving_primary"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/BirthdayProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Choose your date of birth"
                        android:fontFamily="@font/mulish_bold"
                        android:textColor="@color/grey_secondary"
                        android:textSize="12dp"
                        android:layout_marginBottom="30dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="More"
            android:fontFamily="@font/mulish_bold"
            android:textSize="12dp"
            android:textColor="@color/black_secondary"/>

        <androidx.cardview.widget.CardView
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/edit_profile"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="25dp"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/EditProfileText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Profile"
                        android:fontFamily="@font/mulish_bold"
                        android:textColor="@color/cleaving_primary"
                        android:textSize="14dp"/>

                    <ImageView
                        android:id="@+id/EditProfiileButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/next_profile"
                        android:layout_marginLeft="170dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:src="@drawable/about_cleaving"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="25dp"
                    android:layout_marginTop="90dp">

                    <TextView
                        android:id="@+id/AboutCleavingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About Cleaving"
                        android:fontFamily="@font/mulish_bold"
                        android:textColor="@color/cleaving_primary"
                        android:textSize="14dp"/>

                    <ImageView
                        android:id="@+id/AboutCleavingButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/next_profile"
                        android:layout_marginLeft="140dp"
                        android:layout_marginBottom="30dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/LogoutButton"
            android:layout_width="353dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Logout"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16dp"
            android:background="@drawable/button_shape"
            android:textAllCaps="false"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cleaving v. 1.2.0"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:fontFamily="@font/mulish_bold"
            android:textSize="12dp"
            android:textColor="@color/grey_secondary"/>
    </LinearLayout>

</ScrollView>